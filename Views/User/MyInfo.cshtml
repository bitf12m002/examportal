@{
    ViewBag.Title = "MyInfo";
}
@using OnlineExamPortalBasic.Models
@model OnlineExamPortalBasic.Models.User


<body>

    @{

        <div style="background-color:white; opacity:1.0;" class="col-lg-2">
            <br />

            <br />

            <ul class="nav navbar">
                @{
                    int count = 0;
                    foreach (var x in ViewBag.Subjects)
                    {
                        if (count % 2 == 0)
                        {
                            <li><a href="/User/Computer9/@x.Id" style="font-family:'Lucida Handwriting'; color:black;" class="hvr-bounce-to-right">@x.SubjectName</a></li>
                        }
                        if (count % 2 == 1)
                        {
                            <li><a href="/User/Computer9/@x.Id" style="font-family:'Lucida Handwriting'; color:black;" class="hvr-bounce-to-left">@x.SubjectName</a></li>
                        }
                        count++;
                    }
                }


            </ul>
        </div>
    }
    <br />
    
    <div class="col-lg-2">
       
        <table class="table">
            <thead class="btn-primary">
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Password</th>
               
                </tr>
            </thead>
            <tbody>
                
                    <tr class="success" style="opacity:1.0">
                        <td>@Model.firstName</td>
                        <td>@Model.lastName</td>
                        <td>@Model.username</td>
                        <td>@Model.email</td>
                        <td>@Model.password</td>
                        
                        
                    </tr>
                </tbody>
            </table>
                
</div>
    <div class="col-lg-7"></div>
    <div class="col-lg-8 right" >

        <img src="~/Content/student/@Model.picture" style="margin-left:40%" />
    </div>
</body>
