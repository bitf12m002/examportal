@{
    Layout = null;
}

<!DOCTYPE html>
@using OnlineExamPortalBasic.Models
@model OnlineExamPortalBasic.Models.QuestionBank

<body>
    <div>

        @Html.Partial("~/Views/AdminPartial.cshtml");
        <br />
        <br />

        <div class="col-lg-9 pull-right" style="padding-left:10%;padding-top:8% ;">

            <div class="col-lg-4 " style=" color: white">
                
                @using (Html.BeginForm("#", "Login", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.question, "Question")
